# Basic completion for BASH by listing available commands

_axe()
{
    local cur prev opts base
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"

    case ${COMP_CWORD} in
        1)
            opts="$(axe -c)"
            COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
            ;;
        2)
            case ${prev} in
                list)
                    builtin_opts="$(ls -1 ${AXE_ROOT}/etc/filters.d/*.jqf | xargs -i basename {} | sed -e 's/\.jqf$//g')"
                    local_opts="$(ls -1 ${HOME}/.axe/filters/*.jqf 2>/dev/null | xargs -i basename {} | sed -e 's/\.jqf$//g')"
                    COMPREPLY=($(compgen -W "${builtin_opts} ${local_opts}" -- ${cur}))
                    ;;
            esac
            ;;
        *)
            COMPREPLY=()
            ;;
    esac

    return 0
}


